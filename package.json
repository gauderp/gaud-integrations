{
  "name": "gaud-integrations",
  "version": "1.0.0",
  "description": "Integration platform for Meta, WhatsApp, and CRM services",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "dev:local": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "deploy": "wrangler deploy",
    "deploy:staging": "wrangler deploy --env development",
    "deploy:prod": "wrangler deploy --env production",
    "test": "vitest",
    "test:ci": "vitest --run",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "setup": "bash scripts/setup.sh"
  },
  "keywords": [
    "meta",
    "whatsapp",
    "pipedrive",
    "integration",
    "webhooks",
    "conversions-api"
  ],
  "author": "Gaud",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.8.0",
    "axios": "^1.6.5",
    "fastify": "^4.25.2",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "prisma": "^5.8.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4"
  }
}
